<Defs>

	<!-- ==================== Gambeson ==================== -->

	<ThingDef ParentName="ApparelMakeableBase">
		<defName>CE_Armor_Gambeson</defName>
		<label>gambeson</label>
		<description>A thick padded coat made of lots of fabric layers, protects from cuts and bruises. Comes with a pair of shoes and mittens.</description>
		<graphicData>
			<texPath>Things/Apparel/Gambeson/Gambeson</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<recipeMaker>
			<researchPrerequisite>ComplexClothing</researchPrerequisite>
		</recipeMaker>
		<techLevel>Medieval</techLevel>
		<costStuffCount>100</costStuffCount>
		<stuffCategories>
			<li>Fabric</li>
		</stuffCategories>
		<statBases>
			<MaxHitPoints>150</MaxHitPoints>
			<WorkToMake>6000</WorkToMake>
			<Mass>3.0</Mass>
			<Bulk>8</Bulk>
			<WornBulk>3.0</WornBulk>
			<StuffEffectMultiplierArmor>4</StuffEffectMultiplierArmor>
			<ArmorRating_Sharp>0.5</ArmorRating_Sharp>
			<ArmorRating_Blunt>1</ArmorRating_Blunt>
			<StuffEffectMultiplierInsulation_Cold>1.2</StuffEffectMultiplierInsulation_Cold>
			<StuffEffectMultiplierInsulation_Heat>0.1</StuffEffectMultiplierInsulation_Heat>
			<EquipDelay>4</EquipDelay>
		</statBases>
		<thingCategories>
			<li>Apparel</li>
		</thingCategories>
		<apparel>
			<bodyPartGroups>
				<li>Neck</li>
				<li>Torso</li>
				<li>Shoulders</li>
				<li>Arms</li>
				<li>Legs</li>
				<li>Hands</li>
				<li>Feet</li>
			</bodyPartGroups>
			<wornGraphicPath>Things/Apparel/Gambeson/Gambeson</wornGraphicPath>
			<layers>
				<li>OnSkin</li>
			</layers>
			<tags>
				<li>MedievalMilitary</li>
			</tags>
			<defaultOutfitTags>
				<li>Soldier</li>
			</defaultOutfitTags>
		</apparel>
		<modExtensions>
			<li Class="CombatExtended.PartialArmorExt">
				<stats>
					<li>
						<ArmorRating_Sharp>0.40</ArmorRating_Sharp>
						<parts>
							<li>Hand</li>
						</parts>
					</li>
					<li>
						<ArmorRating_Blunt>0.25</ArmorRating_Blunt>
						<parts>
							<li>Hand</li>
						</parts>
					</li>
					<li>
						<ArmorRating_Sharp>0.40</ArmorRating_Sharp>
						<parts>
							<li>Foot</li>
						</parts>
					</li>
					<li>
						<ArmorRating_Blunt>0.25</ArmorRating_Blunt>
						<parts>
							<li>Foot</li>
						</parts>
					</li>
				</stats>
			</li>
		</modExtensions>
	</ThingDef>

	<!-- ==================== Cuirass ==================== -->

