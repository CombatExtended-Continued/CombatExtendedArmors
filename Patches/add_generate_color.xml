<?xml version="1.0" encoding="utf-8" ?>
<Patch>


    <Operation Class="PatchOperationAdd">
        <xpath>Defs/ThingDef[
            defName ="al_SoftVest" or
            defName ="al_CompositeVestLight" or
            defName ="al_CompositeVestPockets" or
            defName ="al_CompositeVestLightPockets" or
            defName ="al_CompositeVestHeavy" or
            defName="al_CommandoHelmet" or
            defName="al_Jumpsuit"]</xpath>
        <value>
            <colorGenerator Class="ColorGenerator_Options">
                <options>
                  <li>
                    <weight>5</weight>
                    <only>RGBA(1.00,1.00,1.00)</only>
                  </li>
                  <li>
                    <weight>5</weight>
                    <only>RGBA(0.66,0.72,0.75)</only>
                  </li>
                  <li>
                    <weight>15</weight>
                    <min>RGBA(0.77,0.61,0.49)</min>
                    <max>RGBA(0.85,0.75,0.60)</max>
                  </li>
                  <li>
                    <weight>20</weight>
                    <min>RGBA(0.33,0.40,0.26)</min>
                    <max>RGBA(0.44,0.49,0.34)</max>
                  </li>
                </options>
              </colorGenerator>
        </value>
    </Operation>

    <Operation Class="PatchOperationReplace">
        <xpath>Defs/ThingDef[
            defName ="Apparel_AdvancedHelmet" or
            defName ="Apparel_CompositeVest"]/colorGenerator</xpath>
        <value>
            <colorGenerator Class="ColorGenerator_Options">
                <options>
                  <li>
                    <weight>5</weight>
                    <only>RGBA(1.00,1.00,1.00)</only>
                  </li>
                  <li>
                    <weight>5</weight>
                    <only>RGBA(0.60,0.60,0.60)</only>
                  </li>
                  <li>
                    <weight>15</weight>
                    <only>RGBA(0.82,0.70,0.57)</only>
                  </li>
                  <li>
                    <weight>20</weight>
                    <min>RGBA(0.33,0.40,0.26)</min>
                    <max>RGBA(0.44,0.49,0.34)</max>
                  </li>
                </options>
              </colorGenerator>
        </value>
    </Operation>

</Patch>