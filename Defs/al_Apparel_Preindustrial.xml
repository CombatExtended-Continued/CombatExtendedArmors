<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!--Buff Coat-->
  <ThingDef ParentName="ApparelMakeableBase">
		<defName>al_BuffCoat</defName>
		<label>buff coat</label>
		<description>A thick leather coat, protects from cuts and minor shrapnel, prefered by infantry and cavalry alike.</description>
		<graphicData>
			<texPath>Apparel/Preindustrial/Buffcoat/al_BuffCoat</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<shaderType>CutoutComplex</shaderType>
    </graphicData>
		<techLevel>Neolithic</techLevel>
		<tradeability>Sellable</tradeability>
    <generateCommonality>1</generateCommonality>
		<costStuffCount>90</costStuffCount>
		<stuffCategories>
			<li>Leathery</li>
		</stuffCategories>
		<statBases>
			<MaxHitPoints>160</MaxHitPoints>
			<WorkToMake>10000</WorkToMake>
			<Mass>3.6</Mass>
      <Bulk>7.5</Bulk>
      <WornBulk>3</WornBulk>
      <StuffEffectMultiplierArmor>7.5</StuffEffectMultiplierArmor>
      <StuffEffectMultiplierInsulation_Cold>1.2</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>0.1</StuffEffectMultiplierInsulation_Heat>
      <EquipDelay>1.5</EquipDelay>
		</statBases>
    <thingCategories Inherit='False'>
      <li>Apparel</li>
    </thingCategories>
		<apparel>
			<bodyPartGroups>
        <li>Neck</li>
				<li>Torso</li>
				<li>Shoulders</li>
				<li>Arms</li>
				<li>Legs</li>
			</bodyPartGroups>
			<wornGraphicPath>Apparel/Preindustrial/Buffcoat/al_BuffCoat</wornGraphicPath>
			<layers>
				<li>Middle</li>
			</layers>
			<tags Inherit='False'>
				<li>Neolithic</li>
				<li>MedievalMilitary</li>
				<li>MedievalArmorDecent</li>
			</tags>
			<defaultOutfitTags>
				<li>Soldier</li>
      </defaultOutfitTags>
		</apparel>
		<recipeMaker>
			<recipeUsers Inherit="False">
				<li>ElectricTailoringBench</li>
				<li>HandTailoringBench</li>
			</recipeUsers>
		</recipeMaker>
  </ThingDef>

  <!--Gambeson-->
  <ThingDef ParentName="ApparelMakeableBase">
		<defName>al_Gambeson</defName>
		<label>gambeson</label>
		<description>A thick padded coat made of lots of fabric layers, protects from cuts and bruises</description>
		<graphicData>
			<texPath>Apparel/Preindustrial/Gambeson/al_Gambeson</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<shaderType>CutoutComplex</shaderType>
    </graphicData>
		<techLevel>Neolithic</techLevel>
		<tradeability>Sellable</tradeability>
    <generateCommonality>1</generateCommonality>
		<costStuffCount>45</costStuffCount>
		<stuffCategories>
			<li>Fabric</li>
		</stuffCategories>
    <costList>
      <Cloth>60</Cloth>
  </costList>
		<statBases>
			<MaxHitPoints>160</MaxHitPoints>
			<WorkToMake>6000</WorkToMake>
			<Mass>4</Mass>
      <Bulk>10</Bulk>
      <WornBulk>2</WornBulk>
      <StuffEffectMultiplierArmor>0</StuffEffectMultiplierArmor>
      <ArmorRating_Sharp>0.85</ArmorRating_Sharp>
      <ArmorRating_Blunt>1.5</ArmorRating_Blunt>
      <StuffEffectMultiplierInsulation_Cold>1.2</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>0.1</StuffEffectMultiplierInsulation_Heat>
      <EquipDelay>1.5</EquipDelay>
		</statBases>
		<apparel>
			<bodyPartGroups>
        <li>Neck</li>
				<li>Torso</li>
				<li>Shoulders</li>
				<li>Arms</li>
				<li>Legs</li>
			</bodyPartGroups>
			<wornGraphicPath>Apparel/Preindustrial/Gambeson/al_Gambeson</wornGraphicPath>
			<layers>
				<li>Middle</li>
        <li>Shell</li>
			</layers>
			<tags Inherit='False'>
				<li>Neolithic</li>
				<li>MedievalMilitary</li>
			</tags>
			<defaultOutfitTags>
				<li>Soldier</li>
      </defaultOutfitTags>
		</apparel>
		<recipeMaker>
      <researchPrerequisite>ComplexClothing</researchPrerequisite>
		</recipeMaker>
  </ThingDef>
  
