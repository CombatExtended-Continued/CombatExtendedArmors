  <!-- =========== Medium ==============-->
  <ThingDef ParentName="ArmorMachineableBase" Name="al_armorvestBase" Abstract="True">
    <defName>al_CompositeVestCamo</defName>
    <label>composite vest (camo)</label>
    <description>A vest with armor plates inserted on the chest and back. The composite ceramics offer better protection than steel but aren't as durable.</description>
    <techLevel>Industrial</techLevel>
    <recipeMaker>
      <researchPrerequisite>FlakArmor</researchPrerequisite>
      <skillRequirements>
        <Crafting>5</Crafting>
      </skillRequirements>
      <unfinishedThingDef>UnfinishedTechArmor</unfinishedThingDef>
    </recipeMaker>
    <statBases>
      <WorkToMake>10800</WorkToMake>
      <MaxHitPoints>90</MaxHitPoints>
      <ArmorRating_Sharp>14</ArmorRating_Sharp>
      <ArmorRating_Blunt>21</ArmorRating_Blunt>
      <Mass>12</Mass>
      <Bulk>5</Bulk>
      <WornBulk>3</WornBulk>
      <EquipDelay>5</EquipDelay>
      <Insulation_Cold>12</Insulation_Cold>
    </statBases>
    <thingCategories>
      <li>ApparelArmor</li>
    </thingCategories>
    <generateCommonality>1</generateCommonality>
    <apparel>
      <bodyPartGroups>
        <li>Torso</li>
        <li>Shoulders</li>
        <li>Neck</li>
      </bodyPartGroups>
      <tags>
        <li>IndustrialMilitaryBasic</li>
      </tags>
      <defaultOutfitTags>
        <li>Soldier</li>
      </defaultOutfitTags>
    </apparel>
  </ThingDef>

  <ThingDef ParentName="al_armorvestBase">
    <defName>al_CompositeVestPockets</defName>
    <label>composite vest rig</label>
    <graphicData>
      <texPath>Apparel/CompositeVest/al_CompositeVestPockets</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <statBases>
      <WorkToMake>12800</WorkToMake>
      <Mass>12.8</Mass>
    </statBases>
    <costList>
        <Steel>60</Steel>
        <DevilstrandCloth>20</DevilstrandCloth>
        <Cloth>30</Cloth>
    </costList>
    <apparel>
      <wornGraphicPath>Apparel/CompositeVest/al_CompositeVestPockets</wornGraphicPath>
      <layers>
        <li>Middle</li>
        <li>Webbing</li>
      </layers>
    </apparel>
    <equippedStatOffsets>
      <CarryBulk>20</CarryBulk>
    </equippedStatOffsets>
  </ThingDef>

