  <!--Soft armor vest-->
  <ThingDef ParentName="al_armorvestBase">
    <defName>al_SoftVest</defName>
    <label>soft armor vest</label>
    <description Inherit="False">A soft armor vest, signifficantly lighter than plate carriers but less protective.</description>
    <graphicData>
      <texPath>Apparel/ArmorMisc/al_SoftArmor</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <statBases Inherit="False">
        <WorkToMake>15800</WorkToMake>
        <MaxHitPoints>90</MaxHitPoints>
        <ArmorRating_Sharp>7</ArmorRating_Sharp>
        <ArmorRating_Blunt>7</ArmorRating_Blunt>
        <Mass>3</Mass>
        <Bulk>4</Bulk>
        <WornBulk>2</WornBulk>
        <EquipDelay>3</EquipDelay>
        <Insulation_Cold>10</Insulation_Cold>
    </statBases>
    <costList>
        <Cloth>20</Cloth>
        <DevilstrandCloth>30</DevilstrandCloth>
    </costList>
    <apparel>
      <wornGraphicPath>Apparel/ArmorMisc/al_SoftArmor</wornGraphicPath>
      <layers>
        <li>Middle</li>
      </layers>
    </apparel>
  </ThingDef>

  <!-- Cuirass -->
	<ThingDef ParentName="ApparelMakeableBase">
		<defName>al_Cuirass</defName>
		<label>plate cuirass</label>
		<description>A thick metal chest plate providing the wearer with a high protection of the torso area.</description>
		<graphicData>
			<texPath>Apparel/Preindustrial/al_Cuirass</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<techLevel>Neolithic</techLevel>
		<tradeability>Sellable</tradeability>
    <generateCommonality>1</generateCommonality>
		<costStuffCount>80</costStuffCount>
		<stuffCategories>
			<li>Steeled</li>
		</stuffCategories>
		<statBases>
			<MaxHitPoints>270</MaxHitPoints>
			<WorkToMake>14000</WorkToMake>
      <Bulk>30</Bulk>
      <WornBulk>4.5</WornBulk>
			<Mass>7.5</Mass>
			<StuffEffectMultiplierArmor>3.2</StuffEffectMultiplierArmor>
			<StuffEffectMultiplierInsulation_Cold>0.12</StuffEffectMultiplierInsulation_Cold>
			<StuffEffectMultiplierInsulation_Heat>0.12</StuffEffectMultiplierInsulation_Heat>
			<EquipDelay>3</EquipDelay>
		</statBases>
    <equippedStatOffsets>
      <MeleeDodgeChance>-0.045</MeleeDodgeChance>
    </equippedStatOffsets>
    <thingCategories Inherit='False'>
      <li>ApparelArmor</li>
    </thingCategories>
		<apparel>
			<bodyPartGroups>
				<li>Torso</li>
				<li>Neck</li>
        <li>Shoulders</li>
			</bodyPartGroups>
			<wornGraphicPath>Apparel/Preindustrial/al_Cuirass</wornGraphicPath>
			<layers>
				<li>Middle</li>
			</layers>
			<tags>
        <li>Neolithic</li>
				<li>MedievalMilitary</li>
				<li>MedievalArmorDecent</li>
			</tags>
			<defaultOutfitTags>
				<li>Soldier</li>
			</defaultOutfitTags>
		</apparel>
		<recipeMaker>
			<soundWorking>Recipe_Smith</soundWorking>
			<researchPrerequisite>PlateArmor</researchPrerequisite>
			<unfinishedThingDef>UnfinishedMetallicTechArmor</unfinishedThingDef>
			<skillRequirements>
				<Crafting>6</Crafting>
			</skillRequirements>
			<recipeUsers Inherit="False">
				<li>ElectricSmithy</li>
				<li>FueledSmithy</li>
			</recipeUsers>
		</recipeMaker>
	</ThingDef>

</Defs>
