  <!--Frag suit-->
  <ThingDef ParentName="ApparelMakeableBase">
    <defName>al_FragSuit</defName>
    <label>frag suit</label>
    <description>A bodysuit padded with armor fabrics, worn under plate carrier for protection of limbs against shrapnel.</description>
    <recipeMaker>
      <researchPrerequisite>FlakArmor</researchPrerequisite>
      <unfinishedThingDef>UnfinishedApparel</unfinishedThingDef>
      <skillRequirements>
        <Crafting>6</Crafting>
      </skillRequirements>
    </recipeMaker>
    <graphicData>
      <texPath>Apparel/ArmorMisc/al_FragSuit</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <costList>
      <Cloth>40</Cloth>
      <DevilstrandCloth>40</DevilstrandCloth>
    </costList>
    <thingCategories>
      <li>ApparelArmor</li>
    </thingCategories>
    <statBases>
      <MaxHitPoints>200</MaxHitPoints>
      <WorkToMake>16000</WorkToMake>
      <Bulk>7</Bulk>
      <Mass>4.5</Mass>
      <Flammability>0.6</Flammability>
      <ArmorRating_Sharp>2.7</ArmorRating_Sharp>
      <ArmorRating_Blunt>1.5</ArmorRating_Blunt>
      <ArmorRating_Heat>0.65</ArmorRating_Heat>
      <Insulation_Cold>14.4</Insulation_Cold> 
      <Insulation_Heat>3</Insulation_Heat>
      <EquipDelay>3</EquipDelay>
    </statBases>
    <apparel>
      <bodyPartGroups>
        <li>Torso</li>
        <li>Neck</li>
        <li>Shoulders</li>
        <li>Arms</li>
        <li>Legs</li>
        <li>Feet</li>
      </bodyPartGroups>
      <wornGraphicPath>Apparel/ArmorMisc/al_FragSuit</wornGraphicPath>
      <layers>
        <li>Shell</li>
      </layers>
      <tags>
        <li>IndustrialAdvanced</li>
      </tags>
      <defaultOutfitTags>
        <li>Soldier</li>
      </defaultOutfitTags>
    </apparel>
    <colorGenerator Class="ColorGenerator_Options">
      <options>
        <li>
          <weight>1</weight>
          <only>RGBA(0.47,0.48,0.41,1)</only>
        </li>
      </options>
    </colorGenerator>
  </ThingDef>

  <ThingDef ParentName="HatMakeableBase" Name="al_BalaclavaBase">
		<defName>al_Balaclava</defName>
		<label>balaclava</label>
		<description>A full face textile mask. Hides the identity of the wearer while providing warmth.</description>
		<graphicData>
			<texPath>Apparel/Accessories/al_Balaclava</texPath>
			<graphicClass>Graphic_Single</graphicClass>
    </graphicData>
		<techLevel>Industrial</techLevel>
		<tradeability>Sellable</tradeability>
    <generateCommonality>0.1</generateCommonality>
		<costStuffCount>25</costStuffCount>
		<stuffCategories>
			<li>Fabric</li>
		</stuffCategories>
		<statBases>
			<MaxHitPoints>100</MaxHitPoints>
			<WorkToMake>2200</WorkToMake>
			<Mass>0.35</Mass>
      <Bulk>0.5</Bulk>
      <StuffEffectMultiplierArmor>1.5</StuffEffectMultiplierArmor>
      <StuffEffectMultiplierInsulation_Cold>0.55</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>0.12</StuffEffectMultiplierInsulation_Heat>
      <EquipDelay>2</EquipDelay>
		</statBases>
		<thingCategories Inherit="False">
			<li>Headgear</li>
		</thingCategories>
		<apparel>
			<bodyPartGroups>
				<li>UpperHead</li>
        <li>Teeth</li>
			</bodyPartGroups>
			<wornGraphicPath>Apparel/Accessories/al_Balaclava</wornGraphicPath>
			<layers>
				<li>OnHead</li>
			</layers>
			<tags>
				<li>IndustrialMilitary</li>
			</tags>
			<defaultOutfitTags>
				<li>Soldier</li>
      </defaultOutfitTags>
		</apparel>
		<recipeMaker>
			<recipeUsers Inherit="False">
				<li>ElectricTailoringBench</li>
				<li>HandTailoringBench</li>
			</recipeUsers>
		</recipeMaker>
		<colorGenerator Class="ColorGenerator_StandardApparel" />
  </ThingDef>

