<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!-- ==================== Gambeson ==================== -->

  <ThingDef ParentName="ApparelMakeableBase">
    <defName>CE_Armor_Gambeson</defName>
    <label>gambeson</label>
    <description>A thick padded coat made of lots of fabric layers, protects from cuts and bruises</description>
    <graphicData>
      <texPath>Things/Apparel/Gambeson/Gambeson</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>CutoutComplex</shaderType>
    </graphicData>
    <recipeMaker>
      <researchPrerequisite>ComplexClothing</researchPrerequisite>
    </recipeMaker>
    <techLevel>Medieval</techLevel>
    <costStuffCount>100</costStuffCount>
    <stuffCategories>
      <li>Fabric</li>
    </stuffCategories>
    <statBases>
      <MaxHitPoints>120</MaxHitPoints>
      <WorkToMake>5000</WorkToMake>
      <Mass>3.5</Mass>
      <Bulk>10</Bulk>
      <WornBulk>3.5</WornBulk>
      <StuffEffectMultiplierArmor>4</StuffEffectMultiplierArmor>
      <ArmorRating_Sharp>0.5</ArmorRating_Sharp>
      <ArmorRating_Blunt>1</ArmorRating_Blunt>
      <StuffEffectMultiplierInsulation_Cold>1.2</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>0.1</StuffEffectMultiplierInsulation_Heat>
      <EquipDelay>4</EquipDelay>
    </statBases>
    <thingCategories>
      <li>Apparel</li>
    </thingCategories>
    <apparel>
      <bodyPartGroups>
        <li>Neck</li>
        <li>Torso</li>
        <li>Shoulders</li>
        <li>Arms</li>
        <li>Legs</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Apparel/Gambeson/Gambeson</wornGraphicPath>
      <layers>
        <li>OnSkin</li>
      </layers>
      <tags>
        <li>MedievalMilitary</li>
      </tags>
      <defaultOutfitTags>
        <li>Soldier</li>
      </defaultOutfitTags>
    </apparel>
  </ThingDef>

  <!-- ==================== Cuirass ==================== -->

  <ThingDef ParentName="ApparelMakeableBase">
    <defName>CE_Armor_Cuirass</defName>
    <label>cuirass</label>
    <description>A thick metal chest plate providing the wearer with a high protection of the torso area.</description>
    <graphicData>
      <texPath>Things/Apparel/Cuirass/Cuirass</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <recipeMaker>
      <soundWorking>Recipe_Smith</soundWorking>
      <researchPrerequisite>PlateArmor</researchPrerequisite>
      <unfinishedThingDef>UnfinishedMetallicTechArmor</unfinishedThingDef>
      <skillRequirements>
        <Crafting>6</Crafting>
      </skillRequirements>
      <recipeUsers Inherit="False">
        <li>ElectricSmithy</li>
        <li>FueledSmithy</li>
      </recipeUsers>
    </recipeMaker>
    <techLevel>Medieval</techLevel>
    <costStuffCount>80</costStuffCount>
    <stuffCategories>
      <li>Metallic</li>
    </stuffCategories>
    <statBases>
      <MaxHitPoints>200</MaxHitPoints>
      <WorkToMake>14000</WorkToMake>
      <Bulk>30</Bulk>
      <WornBulk>4.5</WornBulk>
      <Mass>7.5</Mass>
      <StuffEffectMultiplierArmor>3.0</StuffEffectMultiplierArmor>
      <StuffEffectMultiplierInsulation_Cold>0.12</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>0.12</StuffEffectMultiplierInsulation_Heat>
      <EquipDelay>6</EquipDelay>
    </statBases>
    <thingCategories>
      <li>ApparelArmor</li>
    </thingCategories>
    <apparel>
      <bodyPartGroups>
        <li>Torso</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Apparel/Cuirass/Cuirass</wornGraphicPath>
      <layers>
        <li>Middle</li>
      </layers>
      <tags>
        <li>MedievalMilitary</li>
        <li>MedievalArmorDecent</li>
      </tags>
      <defaultOutfitTags>
        <li>Soldier</li>
      </defaultOutfitTags>
    </apparel>
	<colorGenerator Class="ColorGenerator_StandardApparel" />
  </ThingDef>

  <!-- ==================== Jumpsuit ==================== -->

  <ThingDef ParentName="ApparelMakeableBase">
    <defName>CE_Armor_Jumpsuit</defName>
    <label>jumpsuit</label>
    <description>A full body jumpsuit made out of thick fabric or leather. Excellent for general body protection and manual labour.</description>
    <graphicData>
      <texPath>Things/Apparel/Jumpsuit/Jumpsuit</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <recipeMaker>
      <researchPrerequisite>ComplexClothing</researchPrerequisite>
    </recipeMaker>
	<techLevel>Industrial</techLevel>
    <costStuffCount>100</costStuffCount>
    <stuffCategories>
      <li>Fabric</li>
      <li>Leathery</li>
    </stuffCategories>
    <statBases>
      <MaxHitPoints>200</MaxHitPoints>
      <WorkToMake>8000</WorkToMake>
      <Mass>1.0</Mass>
      <Bulk>5</Bulk>
      <WornBulk>2.5</WornBulk>
      <StuffEffectMultiplierArmor>5</StuffEffectMultiplierArmor>
      <ArmorRating_Sharp>0.5</ArmorRating_Sharp>
      <ArmorRating_Blunt>0.5</ArmorRating_Blunt>
      <StuffEffectMultiplierInsulation_Cold>0.6</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>0.5</StuffEffectMultiplierInsulation_Heat>
      <EquipDelay>3</EquipDelay>
    </statBases>
    <equippedStatOffsets>
      <CarryBulk>10</CarryBulk>
    </equippedStatOffsets>
    <thingCategories>
      <li>Apparel</li>
    </thingCategories>
    <apparel>
      <bodyPartGroups>
        <li>Torso</li>
        <li>Neck</li>
        <li>Shoulders</li>
        <li>Arms</li>
        <li>Legs</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Apparel/Jumpsuit/Jumpsuit</wornGraphicPath>
      <layers>
        <li>OnSkin</li>
      </layers>
      <tags>
        <li>IndustrialAdvanced</li>
      </tags>
      <defaultOutfitTags>
        <li>Worker</li>
      </defaultOutfitTags>
    </apparel>
  </ThingDef>

  <!-- ==================== Soft Armor Vest ==================== -->

  <ThingDef ParentName="ApparelMakeableBase">
    <defName>CE_Armor_SoftVest</defName>
    <label>soft armor vest</label>
    <description>A soft armor vest, signifficantly lighter than plate carriers but less protective.</description>
    <graphicData>
      <texPath>Things/Apparel/SoftArmorVest/SoftArmor</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <recipeMaker>
      <researchPrerequisite>ComplexClothing</researchPrerequisite>
      <skillRequirements>
        <Crafting>6</Crafting>
      </skillRequirements>
      <recipeUsers Inherit="False">
        <li>ElectricTailoringBench</li>
        <li>HandTailoringBench</li>
      </recipeUsers>
    </recipeMaker>
    <techLevel>Industrial</techLevel>
    <generateCommonality>0.25</generateCommonality>
    <costStuffCount>80</costStuffCount>
    <stuffCategories>
      <li>SoftArmor</li>
    </stuffCategories>
    <statBases>
      <MaxHitPoints>100</MaxHitPoints>
      <WorkToMake>12000</WorkToMake>
      <Bulk>5</Bulk>
      <WornBulk>2</WornBulk>
      <Mass>3</Mass>
      <StuffEffectMultiplierArmor>12</StuffEffectMultiplierArmor>
      <ArmorRating_Heat>0.15</ArmorRating_Heat>
      <Insulation_Cold>1</Insulation_Cold>
      <Insulation_Heat>0</Insulation_Heat>
      <EquipDelay>3.5</EquipDelay>
    </statBases>
    <thingCategories>
      <li>ApparelArmor</li>
    </thingCategories>
    <apparel>
      <bodyPartGroups>
        <li>Torso</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Apparel/BulletproofVest/BulletproofVest</wornGraphicPath>
      <layers>
        <li>Middle</li>
      </layers>
      <tags>
        <li>IndustrialMilitaryBasic</li>
      </tags>
      <defaultOutfitTags>
        <li>Soldier</li>
      </defaultOutfitTags>
    </apparel>
  </ThingDef>

  <!-- ==================== Frag Suit ==================== -->

  <ThingDef ParentName="ApparelMakeableBase">
    <defName>CE_Armor_FragSuit</defName>
    <label>frag suit</label>
    <description>A bodysuit padded with armor fabrics, worn under plate carrier for protection of limbs against shrapnel.</description>
    <graphicData>
      <texPath>Things/Apparel/FragSuit/FragSuit</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <recipeMaker>
      <researchPrerequisite>FlakArmor</researchPrerequisite>
      <unfinishedThingDef>UnfinishedApparel</unfinishedThingDef>
      <skillRequirements>
        <Crafting>6</Crafting>
      </skillRequirements>
    </recipeMaker>
	<techLevel>Industrial</techLevel>
	<generateCommonality>0.5</generateCommonality>
    <costStuffCount>70</costStuffCount>
    <stuffCategories>
      <li>Fabric</li>
    </stuffCategories>
    <costList>
      <DevilstrandCloth>30</DevilstrandCloth>
    </costList>
    <thingCategories>
      <li>ApparelArmor</li>
    </thingCategories>
    <statBases>
      <MaxHitPoints>200</MaxHitPoints>
      <WorkToMake>16000</WorkToMake>
      <Bulk>7</Bulk>
	  <WornBulk>3.5</WornBulk>
      <Mass>4.5</Mass>
      <Flammability>0.6</Flammability>
      <StuffEffectMultiplierArmor>4</StuffEffectMultiplierArmor>
      <ArmorRating_Sharp>1.5</ArmorRating_Sharp>
      <ArmorRating_Blunt>1.0</ArmorRating_Blunt>
	  <ArmorRating_Heat>0.1</ArmorRating_Heat>
      <StuffEffectMultiplierInsulation_Cold>0.8</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>0.3</StuffEffectMultiplierInsulation_Heat>
      <EquipDelay>5</EquipDelay>
    </statBases>
    <apparel>
      <bodyPartGroups>
        <li>Torso</li>
        <li>Neck</li>
        <li>Shoulders</li>
        <li>Arms</li>
        <li>Legs</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Apparel/FragSuit/FragSuit</wornGraphicPath>
      <layers>
        <li>OnSkin</li>
      </layers>
      <tags>
        <li>IndustrialMilitaryBasic</li>
		<li>IndustrialMilitaryAdvanced</li>
      </tags>
      <defaultOutfitTags>
        <li>Soldier</li>
      </defaultOutfitTags>
    </apparel>
    <colorGenerator Class="ColorGenerator_Options">
      <options>
        <li>
          <weight>1</weight>
          <only>RGBA(0.47,0.48,0.41,1)</only>
        </li>
      </options>
    </colorGenerator>
  </ThingDef>

</Defs>
