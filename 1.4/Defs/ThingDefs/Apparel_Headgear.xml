<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!-- ==================== Balaclava ==================== -->

  <ThingDef ParentName="HatMakeableBase">
    <defName>CE_Armor_Balaclava</defName>
    <label>balaclava</label>
    <description>A full face textile mask. Hides the identity of the wearer while providing warmth.</description>
    <graphicData>
      <texPath>Things/Apparel/Balaclava/Balaclava</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <possessionCount>1</possessionCount>
    <techLevel>Industrial</techLevel>
    <generateCommonality>0.1</generateCommonality>
    <costStuffCount>25</costStuffCount>
    <stuffCategories>
      <li>Fabric</li>
    </stuffCategories>
    <statBases>
      <MaxHitPoints>100</MaxHitPoints>
      <WorkToMake>2200</WorkToMake>
      <Mass>0.2</Mass>
      <Bulk>0.5</Bulk>
      <StuffEffectMultiplierArmor>1.5</StuffEffectMultiplierArmor>
      <StuffEffectMultiplierInsulation_Cold>0.55</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>0</StuffEffectMultiplierInsulation_Heat>
      <EquipDelay>2</EquipDelay>
    </statBases>
    <apparel>
      <countsAsClothingForNudity>false</countsAsClothingForNudity>
      <bodyPartGroups>
        <li>UpperHead</li>
        <li>Teeth</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Apparel/Balaclava/Balaclava</wornGraphicPath>
      <layers>
        <li>OnHead</li>
      </layers>
      <tags>
        <li>IndustrialMilitaryBasic</li>
      </tags>
      <defaultOutfitTags>
        <li>Soldier</li>
      </defaultOutfitTags>
    </apparel>
    <recipeMaker>
      <researchPrerequisite>ComplexClothing</researchPrerequisite>
    </recipeMaker>
    <colorGenerator Class="ColorGenerator_StandardApparel" />
    <tradeTags>
      <li>BasicClothing</li>
    </tradeTags>
  </ThingDef>

  <!-- ==================== Sombrero ==================== -->

  <ThingDef ParentName="HatMakeableBase">
    <defName>CE_Armor_Sombrero</defName>
    <label>sombrero</label>
    <description>A type of wide-brimmed hat used to shield the face and eyes from the sun.</description>
    <graphicData>
      <texPath>Things/Apparel/Sombrero/Sombrero</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <possessionCount>1</possessionCount>
    <techLevel>Industrial</techLevel>
    <generateCommonality>0.5</generateCommonality>
    <costStuffCount>30</costStuffCount>
    <stuffCategories>
      <li>Fabric</li>
      <li>Leathery</li>
    </stuffCategories>
    <statBases>
      <MaxHitPoints>100</MaxHitPoints>
      <WorkToMake>2500</WorkToMake>
      <Mass>0.2</Mass>
      <Bulk>5</Bulk>
      <WornBulk>1</WornBulk>
      <StuffEffectMultiplierArmor>2.5</StuffEffectMultiplierArmor>
      <StuffEffectMultiplierInsulation_Cold>0.05</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>0.65</StuffEffectMultiplierInsulation_Heat>
      <EquipDelay>1</EquipDelay>
    </statBases>
    <equippedStatOffsets>
      <SocialImpact>0.15</SocialImpact>
      <SlaveSuppressionOffset MayRequire="Ludeon.RimWorld.Ideology">-0.1</SlaveSuppressionOffset>
    </equippedStatOffsets>
    <apparel>
      <countsAsClothingForNudity>false</countsAsClothingForNudity>
      <bodyPartGroups>
        <li>UpperHead</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Apparel/Sombrero/Sombrero</wornGraphicPath>
      <layers>
        <li>Overhead</li>
      </layers>
      <tags>
        <li>IndustrialBasic</li>
        <li>Western</li>
      </tags>
      <defaultOutfitTags>
        <li>Worker</li>
      </defaultOutfitTags>
    </apparel>
    <recipeMaker>
      <researchPrerequisite>ComplexClothing</researchPrerequisite>
    </recipeMaker>
    <colorGenerator Class="ColorGenerator_Options">
      <options>
        <li>
          <weight>20</weight>
          <only>(0.45,0.3,0.1,1)</only>
        </li>
      </options>
    </colorGenerator>
    <tradeTags>
      <li>BasicClothing</li>
    </tradeTags>
  </ThingDef>

  <!-- ==================== Ballistic Goggles ==================== -->

  <ThingDef ParentName="ArmorHelmetMakeableBase">
    <defName>CE_Armor_BallisticGoggles</defName>
    <label>ballistic goggles</label>
    <description>A pair of reinforced goggles capable of stopping shrapnel.</description>
    <graphicData>
      <texPath>Things/Apparel/BallisticGoggles/BallisticGoggles</texPath>
      <graphicClass>Graphic_Single</graphicClass> 
    </graphicData>
    <possessionCount>1</possessionCount>
    <techLevel>Industrial</techLevel>
    <generateCommonality>0.25</generateCommonality>
    <costList>
      <Steel>10</Steel>
      <Chemfuel>15</Chemfuel>
    </costList>
    <statBases>
      <MaxHitPoints>75</MaxHitPoints>
      <WorkToMake>5500</WorkToMake>
      <Mass>0.2</Mass>
      <Bulk>0.5</Bulk>
      <WornBulk>0.5</WornBulk>
      <ArmorRating_Sharp>2</ArmorRating_Sharp>
      <ArmorRating_Blunt>4</ArmorRating_Blunt>
      <ArmorRating_Heat>0.35</ArmorRating_Heat>
      <Insulation_Cold>1</Insulation_Cold>
      <Insulation_Heat>0</Insulation_Heat>
      <EquipDelay>1</EquipDelay>
    </statBases>
    <apparel>
      <countsAsClothingForNudity>false</countsAsClothingForNudity>
      <bodyPartGroups>
        <li>Eyes</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Apparel/BallisticGoggles/BallisticGoggles</wornGraphicPath>
      <hatRenderedFrontOfFace>true</hatRenderedFrontOfFace>
      <layers>
        <li>StrappedHead</li>
      </layers>
      <tags>
        <li>IndustrialMilitaryBasic</li>
      </tags>
      <defaultOutfitTags>
        <li>Soldier</li>
      </defaultOutfitTags>
    </apparel>
    <recipeMaker>
      <researchPrerequisite>FlakArmor</researchPrerequisite>
      <unfinishedThingDef>UnfinishedTechArmor</unfinishedThingDef>
      <skillRequirements>
        <Crafting>6</Crafting>
      </skillRequirements>
    </recipeMaker>
    <tradeTags>
      <li>Armor</li>
    </tradeTags>
  </ThingDef>

</Defs>
